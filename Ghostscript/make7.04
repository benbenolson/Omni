NEWDATE=121002
OLDDATE=071902

ORIGDIR=`pwd`
GHOSTDIR=/home/ghostscript/

NEWCLEANPATCH=$ORIGDIR/7.0x/Omni-7.04-$NEWDATE-patch.clean
if test ! -z "${OLDDATE}"; then
	OLDCLEANPATCH=$ORIGDIR/7.0x/Omni-7.04-$OLDDATE-patch.clean
fi
NEWUPDATEPATCH=$ORIGDIR/7.0x/Omni-7.04-$NEWDATE-patch.update

# Create clean patch
echo "Creating clean patch"
(
cd $GHOSTDIR
diff -ur gold-gs7.04/ gs7.04/ |
	sed -e '/^Common sub/d' -e '/^Only in/d' -e 's/gold-gs7.04\///' -e 's/gs7.04\///' > $NEWCLEANPATCH
diff -Nu gold-gs7.04/src/gomni.c gs7.04/src/gomni.c |
        sed -e 's/gold-gs7.04\///' -e 's/gs7.04\///' >> $NEWCLEANPATCH
diff -Nu gold-gs7.04/src/defs.h gs7.04/src/defs.h |
	sed -e 's/gold-gs7.04\///' -e 's/gs7.04\///' >> $NEWCLEANPATCH
)

# Create update patch
if test ! -z "${OLDDATE}"; then
	echo "Creating update patch"
	(
	cd /tmp

	TARBALL=$GHOSTDIR/golden/ghostscript-7.04.tar.gz
	OLDGHOST=ghostscript-7.04-$OLDDATE
	NEWGHOST=ghostscript-7.04-$NEWDATE
	TARGHOST=gs7.04

	rm -rf $OLDGHOST $NEWGHOST

	tar xzf $TARBALL
	(
	cd $TARGHOST
	patch -p0 < $OLDCLEANPATCH > /dev/null
	)
	mv $TARGHOST $OLDGHOST

	tar xzf $TARBALL
	(
	cd $TARGHOST
	patch -p0 < $NEWCLEANPATCH > /dev/null
	)
	mv $TARGHOST $NEWGHOST

	diff -ur $OLDGHOST/ $NEWGHOST/ |
		sed -e '/^Common sub/d' -e '/^Only in/d' -e 's/gs7.04-[0-9]*\///' -e 's/gs7.04\///' > $NEWUPDATEPATCH
	diff -Nu $OLDGHOST/src/gomni.c $NEWGHOST/src/gomni.c >> $NEWUPDATEPATCH
	diff -Nu $OLDGHOST/src/defs.h $NEWGHOST/src/defs.h >> $NEWUPDATEPATCH
	)
fi
